---
const { buttonText } = Astro.props;
const { buttonLink } = Astro.props;
---
<a href={buttonLink}>
	<div class='button'>
		{buttonText}
	</div>
</a>

<style>
	.button {
		display: flex;
		flex-direction: column;
		justify-content: center;
		font-size: 1.5rem;
        font-family: "Afacad Regular";
		text-align: center;
		width: 12rem;
		height: 4rem;
		border: 3px solid #242424;
		box-shadow: 5px 5px 1px;
		cursor: pointer;
		margin-top: 10vh;
	}

	a {
		text-decoration: none;
		color: var(--heading-fg);
	}

	.button:hover {
		transform: translateX(5px) translateY(5px);
		box-shadow: none;
		transition: 0.5s;
	}
</style>
