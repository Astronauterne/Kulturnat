<div>
	<a href='/program?id=all' id='all' class='link'>Alle</a>
	<a href='/program?id=helsingor' id='helsingor' class='link'>Helsingør</a>
	<a href='/program?id=tikob' id='tikob' class='link'>Tikøb</a>
	<a href='/program?id=espergarde' id='espergarde' class='link'>Espergærde</a>
</div>

<script>
	document.addEventListener('astro:page-load', () => {
		const getUrl = window.location.search;
		const getSearch = new URLSearchParams(getUrl);
		const id = getSearch.get('id');
		let links = document.querySelectorAll('.link');
		links.forEach((link) => {
			link.classList.remove('.selected');
		});
		if (id == 'all') {
			document.getElementById('all')?.classList.add('selected');
		} else if (id == 'helsingor') {
			document.getElementById('helsingor')?.classList.add('selected');
		} else if (id == 'tikob') {
			document.getElementById('tikob')?.classList.add('selected');
		} else if (id == 'espergarde') {
			document.getElementById('espergarde')?.classList.add('selected');
		}
	});
</script>

<style>
	div {
		display: flex;
		justify-content: space-between;
		margin: 0 10vw 4rem 10vw;
	}

	div a {
		position: relative;
		text-decoration: none;
		color: var(--heading-fg);
		font-family: 'Futura Medium';
		font-weight: 700;
		font-size: 1.1rem;
	}

	div a:hover {
		color: var(--heading-fg);
	}

	div a:visited {
		color: var(--heading-fg);
	}

	div a::before {
		content: '';
		position: absolute;
		display: block;
		width: 100%;
		height: 2px;
		bottom: 0;
		left: 0;
		background-color: var(--heading-fg);
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	div a:hover::before {
		transform: scaleX(1);
	}

	div a.selected::before {
		content: '';
		position: absolute;
		display: block;
		width: 100%;
		height: 2px;
		bottom: 0;
		left: 0;
		background-color: var(--heading-fg);
		transform: scaleX(1);
	}

	@media (min-width: 800px) {
		div {
			margin: 0 30vw 4rem 30vw;
		}
	}
</style>
